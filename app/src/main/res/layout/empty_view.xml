<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.saklayen.githubusers.domain.Result" />

        <import type="com.saklayen.githubusers.domain.Status" />

        <variable
            name="result"
            type="Result" />
        <variable
            name="dummyData"
            type="java.util.List&lt;String>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_state_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:visibility="gone"
        app:goneUnless="@{result.status == Status.SUCCESS}">


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_view"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="lottie/not_found.json"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/pok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/no_info_available"
            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottie_view" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/testRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pok"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_cricket_score_details"
            tools:itemCount="1"
            bindScrollPosition="@{0}"
            bindDetailedScore="@{dummyData}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>